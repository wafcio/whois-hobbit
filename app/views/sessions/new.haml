%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }
    %meta{ content: '', name: 'description' }
    %meta{ content: '', name: 'author' }
    %title SB Admin 2 - Bootstrap Admin Theme
    %link{ href: 'assets/application.css', rel: 'stylesheet' }
    %script{src: 'assets/application.js' }
  %body
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              %h3.panel-title Please Sign In
            .panel-body
              %form{ role: 'form' }
                %fieldset
                  .form-group
                    %input.form-control{ autofocus: '', name: 'email', placeholder: 'E-mail', type: 'email' }
                  .form-group
                    %input.form-control{ name: 'password', placeholder: 'Password', type: 'password', value: '' }
                  %a.btn.btn-lg.btn-success.btn-block{ href: 'index.html' } Login